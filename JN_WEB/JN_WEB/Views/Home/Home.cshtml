@model List<JN_WEB.Entities.Producto>

@{
    ViewData["Title"] = "Principal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body register-card-body">
        <h4 class="">Datos del usuario</h4>

        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="card">
                      <div style="text-align:center">
                        <img class="card-img-top" src="@item.Imagen" width="150" height="200" style="margin-top:20px">
                      </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.Nombre</h5><br/>
                            <p class="card-text">@if (@item.Descripcion!.Length > 160) { @item.Descripcion.Substring(0, 160) } else {@item.Descripcion} ... </p>
                            <p class="card-text">Cantidad: @item.Inventario</p>
                            <p class="card-text">Precio: ¢ @item.PrecioUnitario.ToString("N2")</p>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</div>